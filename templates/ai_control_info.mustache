{{!
    @template block_ai_control/ai_control_info

    Template for the widget that shows the ai_control information to the students.

    Example context (json):
    {
        "enabled": true,
        "expiresat": 1707822000
        "expiresatFormatted": "Tue 13th of February 2024, 12:00h",
    }
}}
<div id="block_ai_control-info-{{uniqid}}" data-expiresat="{{expiresat}}">
    {{#enabled}}
        <h3 class="text-center text-success">{{#str}}aienabled, block_ai_control{{/str}}</h3>
        <div class="alert {{#warning}}alert-danger{{/warning}}{{^warning}}alert-info{{/warning}}">
            <div class="small font-italic">{{#str}}unlockeduntil, block_ai_control{{/str}}</div>
            <div>
                <div class="d-flex justify-content-center font-weight-bold" data-ai-control="targetdate">{{expiresatFormatted}}</div>
                <div class="d-flex justify-content-center font-weight-bold" data-ai-control="countdown"></div>
            </div>
        </div>
    {{/enabled}}
    {{^enabled}}
        <h3 class="text-center text-danger">{{#str}}aidisabled, block_ai_control{{/str}}</h3>
    {{/enabled}}
</div>
